{
  "build": {
    "beforeDevCommand": "yarn tauri-dev",
    "beforeBuildCommand": "yarn tauri-build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Studio Assist",
    "version": "4.0.0"
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "confirm": true,
        "message": true
      },
      "fs": {
        "createDir": true,
        "exists": true,
        "readFile": true,
        "scope": [
          "$APPDATA/*",
          "$APPDATA/*/**",
          "$APPLOG/*",
          "$APPLOG/*/**",
          "$DESKTOP/*"
        ],
        "writeFile": true
      },
      "os": {
        "all": true
      },
      "process": {
        "relaunch": true
      },
      "protocol": {
        "asset": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "startDragging": true,
        "center": true,
        "maximize": true,
        "unmaximize": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.musicbydarcy.StudioAssist",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "center": true,
        "fileDropEnabled": true,
        "hiddenTitle": true,
        "resizable": true,
        "title": "Studio Assist",
        "titleBarStyle": "Overlay",
        "width": 1280,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800
      }
    ]
  }
}